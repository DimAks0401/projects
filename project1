Words_dict = {
             "ЛОЛ": "Что-то очень смешное",
             "КРИНЖ": "Что-то странное, стыдное",
             "РОФЛ": "Шутка",
             "ЩИЩ": "Одобрение или восторг",
             "КРИПОВЫЙ": "Страшный, пугающий",
             "АГРИТЬСЯ": "Злиться"
             }
while True:
    word = input("Ведите непонятное слово (всё слово пишите большими буквами)")  
    
    if word in Words_dict.keys():
        print(Words_dict[word])
    else:
        print("Этого слова нет")
